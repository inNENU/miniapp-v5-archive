.password-mask {
  position: fixed;
  z-index: 201;
  top: 100%;

  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.1);
}

.password {
  display: flex;
  position: fixed;
  z-index: 202;
  top: 35%;
  left: 10%;

  width: 80%;
  height: 15%;
  background-color: var(--bgcolor);
  border-radius: 16px;

  text-align: center;
  font-size: 20px;
  font-weight: 400;
  flex-direction: column;
  justify-content: center;

  letter-spacing: 1px;
}

.password .hint {
  height: 26px;
  margin-bottom: 10px;
}

.password input {
  background-color: transparent;
  border: none;

  font-size: 26px;
  font-weight: 800;
  line-height: 1.5;

  letter-spacing: 40px;
}
