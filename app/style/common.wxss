.button-hover {
  background-color: var(--hover) !important;
  color: inherit;
  opacity: 0.7 !important;
}

/* donate */
.donate-wrapper {
  position: fixed;
  bottom: 20px;
  width: 100%;
}

.donate-button {
  width: 60%;
  margin: 0 auto;
  padding: 10px;
  background-color: #09bb07;
  border: none;
  border-radius: 5px;

  color: #fff;
  text-align: center;
  line-height: 1.6;
}

.icon-button {
  width: 24px;
  height: 24px;
  background-color: transparent;
  background-position: 50% 50%;
  border: 0;

  font-size: 0;

  background-repeat: no-repeat;
  background-size: 100%;
  outline: 0;
}

